<%if admin_signed_in? %>
  <%= link_to "Sign out", destroy_admin_session_path, method: :delete %>
<% else %>
  <%= link_to "Sign in", new_admin_session_path %>
<% end %>

<style>
div {
  display: block;
  float: left
}

#organizations {
    padding-left: 20px;
    width: 60%;
    font-size: 12px;
    clear: both;
}

#organizations p{
    margin: 0;
}

#organization-content {
    width: 40%;
    clear: both;
}

</style>

<h1>Listing Organizations</h1>

  <div id="organizations">
    <% @organizations.each do |organization| %>
    <p><%= link_to organization.name, organization, remote:true, class: 'organization-link'%></p>
    <% end %>
  </div>

  <div id="organization-content">
  </div>

<br>

<div><%= link_to 'New Organization', new_organization_path %></div>
