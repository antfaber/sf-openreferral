<%= link_to 'Edit', edit_organization_path(@organization), class: 'edit-link-pjax' %>

<p>
  <strong>Name:</strong>
  <%= @organization.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @organization.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @organization.address %>
</p>

<p>
  <strong>Phone:</strong>
  <% @organization.phones.each do |phone| %>
    <%= phone %>
  <% end %>
</p>

<p>
  <strong>Email:</strong>
  <% @organization.emails.each do |email| %>
    <%= email %>
  <% end %>
</p>

<p>
  <strong>Url:</strong>
  <%= @organization.url %>
</p>

<p>
  <strong>Language:</strong>
  <% @organization.languages.each do |language| %>
    <%= language %>
  <% end %>
</p>

<% if @organization.status == 'pending' %>
  <%= link_to 'Approve', organization_path(@organization, organization: { status: 'approved' }), :method => :put %>
<% else %>
  <%= link_to 'Unapprove', organization_path(@organization, organization: { status: 'pending' }), :method => :put %>
<% end %>

<form action="<%= "#{api_export_path}" %>", id="export_format">
  <select  name="format" id="export_format"  size="1">
      <% ApiController::SUPPORTED_FORMATS.each do |f| %>
          <option value="<%= f %>"><%= f %></option>
      <% end %>
    </select>
    <input type="submit" value="Export">
</form>
